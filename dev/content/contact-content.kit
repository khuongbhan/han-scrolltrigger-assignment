<section class="grid-container content-spacing page-intro" id="contact-intro">
    <div>
        <h1>Contact</h1>
    </div>
</section>

<section class="grid-container content-spacing" id="contact-map">
    <div>
        <div id="map"></div>
    </div>
</section>

<section class="grid-container content-spacing" id="contact-form">
    <div>

        <section id="contact-button-section">
            <section id="button-container">
                <button class="red-button" id="contact-us-btn">Contact Us <i class="far fa-ellipsis-v"></i></button>

                <section id="contact-options">
                    <ul>
                        <li><a href="mailto:jgg32@drexel.edu"><i class="far fa-envelope"></i>email</a></li>
                        <li><button id="show-form-btn"><i class="fas fa-align-left"></i>Contact Form</button></li>
                    </ul>
                </section>
            </section>
        </section>

        <section id="form-container">
            <form action="https://formspree.io/xayplden" method="POST">
                <section>
                    <input type="text" placeholder="Name" name="Name">
                </section>

                <section>
                    <input type="email" placeholder="Email" name="Email">
                </section>

                <section>
                    <input type="text" placeholder="Location" name="Location">
                </section>

                <section>
                    <input type="tel" placeholder="Phone" name="Phone">
                </section>

                <section>
                   <textarea  placeholder="Message" name="Message"></textarea>
                </section>

                <section>
                    <button class="red-button" type="submit">Send</button>
                </section>
            </form>
        </section>

    </div>
</section>
